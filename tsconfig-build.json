{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noImplicitThis": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": [ "./node_modules/@types" ],
    "outDir": "_dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@c1/app": [ "src/app" ],
      "@c1/components": [ "src/components" ],
      "@c1/creditcard": [ "src/creditcard" ],
      "@c1/mockability": [ "src/mockability" ],
      "@c1/mocks": [ "src/mocks" ],
      "@c1/creditcard/creditcard.module": [ "src/creditcard/creditcard.module"]
    }
  },
  "exclude": [
    "node_modules",
    "_dist",
    "./src/*.spec.ts"
  ],
  "include": [
    "src"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "files": [
    "src/main.ts",
    "src/creditcard/index.ts",
    "src/creditcard/close-account/close-account.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./_dist/aot",
    "skipMetadataEmit" : true
  }
}
