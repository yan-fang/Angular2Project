{
  "selectorTitle" : "- Select a Reason -",
  "selectOptions" : [
    {"reasonValue" : "CANCELEDSERVICE", "label" : "Canceled the membership or recurring service"},
    {"reasonValue" : "PRODUCTNOTASDESCRIBED", "label" : "Merchandise was not as described"},
    {"reasonValue" : "PRODUCTNOTRECEIVED", "label" : "Never or only partially received the product/service"},
    {"reasonValue" : "WRONGAMOUNTCHARGED", "label" : "Amount was different from what it should be"},
    {"reasonValue" : "DOUBLEBILLING", "label" : "Was billed twice"},
    {"reasonValue" : "REFUNDNOTPROCESSED", "label" : "No refund was processed by the merchant"},
    {"reasonValue" : "OTHERPAYMENTMETHOD", "label" : "Paid by other means"},
    {"reasonValue" : "OTHERREASON", "label" : "Other reason"}
  ],
  "models" : {
    "CANCELEDSERVICE" : {},
    "PRODUCTNOTASDESCRIBED" : {},
    "PRODUCTNOTRECEIVED" : {},
    "WRONGAMOUNTCHARGED" : {},
    "DOUBLEBILLING" : {},
    "REFUNDNOTPROCESSED" : {},
    "OTHERPAYMENTMETHOD" : {},
    "OTHERREASON" : {}
  },
  "fields" : {
    "CANCELEDSERVICE": [
      {
        "type": "datepicker",
        "key": "cancellationDate",
        "templateOptions": {
          "label": "Date of cancellation"
        }
      },
      {
        "type": "radioInput",
        "key": "stopFuturePayments",
        "templateOptions": {
          "label": "Stop future payments from this merchant?",
          "options": [
            {
              "name": "Yes",
              "value": true
            },
            {
              "name": "No",
              "value": false
            }
          ]
        }
      },
      {
        "type": "textarea",
        "key": "cancellationReason",
        "templateOptions": {
          "label": "Reason for cancellation",
          "rows": 2
        }
      },
      {
        "type": "textarea",
        "key": "cancellationPolicy",
        "templateOptions": {
          "label": "Merchant's cancellation policy",
          "rows": 2
        }
      }
    ],
    "PRODUCTNOTASDESCRIBED": [
      {
        "type": "textarea",
        "key": "itemDefect",
        "templateOptions": {
          "label": "Details on what was wrong with the purchase",
          "rows": 2
        }
      },
      {
        "type": "textarea",
        "key": "resolutionEffort",
        "templateOptions": {
          "label": "Efforts to return the merchandise and resolve the dispute with the merchant",
          "rows": 2
        }
      }
    ],
    "PRODUCTNOTRECEIVED": [
      {
        "type": "datepicker",
        "key": "expectedServiceDate",
        "templateOptions": {
          "label": "Date expected to receive the product/service"
        }
      },
      {
        "type": "textarea",
        "key": "itemDefect",
        "templateOptions": {
          "label": "Detailed description of the product/service that wasn't received or only partially received",
          "rows": 2
        }
      },
      {
        "type": "textarea",
        "key": "resolutionEffort",
        "templateOptions": {
          "label": "Efforts to resolve the dispute with the merchant",
          "rows": 2
        }
      },
      {
        "type": "moneyInput",
        "key": "requestedRefundAmount",
        "templateOptions": {
          "label": "Amount of credit you feel you're due (if you received partial product/service, we can't dispute the full amount)",
          "placeholder": "0.00",
          "extra" : {
            "jointLabel" : {
              "prefix" : "Amount of credit ",
              "suffix" : " is due (if he/she received partial product/service, we can't dispute the full amount)"
            }
          }
        }
      }
    ],
    "WRONGAMOUNTCHARGED": [
      {
        "type": "moneyInput",
        "key": "correctAmount",
        "templateOptions": {
          "label": "Amount that should have been billed",
          "placeholder": "0.00"
        }
      }
    ],
    "DOUBLEBILLING": [
      {
        "type": "textarea",
        "key": "duplicateBillingDetails",
        "templateOptions": {
          "label": "Details outlining the duplicate billing",
          "rows": 4
        }
      }
    ],
    "REFUNDNOTPROCESSED": [
      {
        "type": "textarea",
        "key": "refundReason",
        "templateOptions": {
          "label": "Reason to receive a refund",
          "rows": 2
        }
      },
      {
        "type": "textarea",
        "key": "resolutionEffort",
        "templateOptions": {
          "label": "Efforts to resolve the dispute with the merchant",
          "rows": 2
        }
      },
      {
        "type": "datepicker",
        "key": "expectedRefundDate",
        "templateOptions": {
          "label": "Date of return"
        }
      },
      {
        "type": "textarea",
