      },
      {
        "type": "input",
        "key": "paymentMethod",
        "templateOptions": {
          "label": "Other method used to pay the merchant"
        }
      }
    ],
    "OTHERREASON": [
      {
        "type": "textarea",
        "key": "otherComments",
        "wrapper" : "requiredField",
        "templateOptions": {
          "required" : true,
          "label" : "",
          "wrapperLabel": "Please tell us why you're disputing this transaction so that we can assist you more quickly",
          "rows": 4
        }
      }
    ]
  }
}
